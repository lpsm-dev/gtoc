# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.go]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# YAML files
[*.yml]
[*.yaml]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

# Makefiles should use tabs for indentation
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
